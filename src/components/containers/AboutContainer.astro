---
import { aboutMeData } from '../../constants/about';
import { getLangFromUrl, useTranslations } from '../../utils/utils';
import WhatIDo from '../WhatIDo';
import Header2 from './Header2.astro';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<main class='h-full w-full'>
	<h1 class='ml-3 mt-3 text-4xl font-bold'>{t('about.title')}</h1>
	<div class='flex w-full flex-col justify-center md:flex-row'>
		<div class='m-4 ml-8 flex w-11/12 items-center justify-center md:w-8/12'>
			<p>{aboutMeData[lang].about}</p>
		</div>
		<div class='m-4 self-center text-nowrap md:m-6 lg:w-4/12'>
			<ul>
				<li class='text-sm md:mb-3'>
					<strong>Birthday: </strong>
					{aboutMeData[lang].birthday}
				</li>
				<li class='text-sm md:mb-3'>
					<strong>Residence: </strong>
					{aboutMeData[lang].residence}
				</li>
				<li class='text-sm md:mb-3'>
					<strong>Phone: </strong>
					{aboutMeData[lang].phone}
				</li>
				<li class='text-sm md:mb-3'>
					<strong>Email: </strong>
					{aboutMeData[lang].email}
				</li>
			</ul>
		</div>
	</div>
	<div>
		<Header2>
			{t('about.whatIDo')}
		</Header2>
		<div
			class='flex w-full flex-row flex-wrap items-center justify-center md:justify-around'
		>
			<WhatIDo data={aboutMeData[lang].whatIDo} />
		</div>
	</div>
</main>
